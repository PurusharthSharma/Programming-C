//        A Program to Calculate Area of triangle


#include <stdio.h>
#include <math.h>
 
void main(){

    int s, a, b, c, area;
    
    clrscr();
 
    printf("Enter the values of a, b and c :");
    scanf("%d %d %d", &a, &b, &c);
 
    s = (a + b + c) / 2;
    area = sqrt(s * (s - a) * (s - b) * (s - c));
    
    printf("Area of a triangle = %d \n", area);
    
}

#include<stdio.h>
#include<conio.h>
void input(int arr[],int);
void display(int arr[],int);
void minmax(int arr[],int);
void main()
{
int arr[10],n;
printf("Enter the size=");
scanf("%d",&n);
input(arr,n);
display(arr,n);
minmax(arr,n);
getch();
}
void input(int arr[],int n)
{
int i;
for(i=0;i<n;i++)
{
printf("\nEnter element=");
scanf("%d",&arr[i]);
}
}
void display(int arr[],int n)
{
int i;
printf("\nThe array is=");
for(i=0;i<n;i++)
{
printf("\n%d",arr[i]);
}
}
void minmax(int arr[],int n)
{
int i,min,max;
min=arr[0];
for(i=0;i<n;i++)
{
if(arr[i]<min)
min=arr[i];
}
max=arr[0];
for(i=0;i<n;i++)
{
if(arr[i]>max)
max=arr[i];
}
printf("\nMin value=%d",min);
printf("\nMax value=%d",max);
}

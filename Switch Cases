//  Program of Simple Calculation..  :)


#include<stdio.h>
#include<conio.h>


void main(){

	float num1,num2,result;
	int choice;
	clrscr();

	printf("\t\t\t\tSIMPLE  CALCULATION\n\n\n");

	printf("Enter The First Number : ");
	scanf("%f",&num1);

	printf("\nEnter The Second Number : ");
	scanf("%f",&num2);

	printf("\n\n 1. Simple Addition,");
	printf("\n 2. Simple Difference,");
	printf("\n 3. Simple Mutiplication,");
	printf("\n 4. Simple Division,");
	printf("\n 5.Exit.");

	printf("\n\nEnter your Choice :");
	scanf("%d",&choice);

	switch(choice) {

		case 1: result=num1+num2;
			printf("\n\nResult is : %f",result);
			break;

		case 2: result=num1-num2;
			printf("\n\nResult is : %f",result);
			break;

		case 3: result=num1*num2;
			printf("\n\nResult is : %f",result);
			break;

		case 4: result=num1/num2;
			printf("\n\nResult is : %f",result);
			break;

		case 5: exit(0);

		default: exit(0);
	}

	getch();

}
